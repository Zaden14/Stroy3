<Window x:Class="Stroy.Stranichki.MinIzmen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stroy.Stranichki"
        mc:Ignorable="d"
        Title="MinIzmen" Height="100" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="50,0,0,0" Text="Введите число:" />
            <TextBox Name="TBIzm" Width="100"/>
            <Button Name="BIzm" Content="Изменить" Margin="0,5,0,0" Width="100" Click="BIzm_Click" />
        </StackPanel>
    </Grid>
</Window>
